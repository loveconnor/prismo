# Prismo Backend - Environment Variables Template
# Copy this to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here
PORT=5000
FLASK_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# AI Provider Configuration
DEFAULT_AI_PROVIDER=gemini  # or "claude"

# Gemini API (Google AI)
GEMINI_API_KEY=your-gemini-api-key-here

# Claude API (Anthropic)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OAuth Configuration (optional)
OAUTH_CALLBACK_URL=http://localhost:4200/auth/callback
GOOGLE_CLIENT_ID=your-google-client-id-here

# Legacy Bedrock API (deprecated)
Bedrock_API_URL=https://Bedrockllmapi.vercel.app/generate-content
Bedrock_API_KEY=your-bedrock-api-key-here
